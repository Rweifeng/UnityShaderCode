Shader "浅墨Shader编程/02.认识和书写实战/002.材质颜色设置&开启光照"{
	//--------------------子着色器1----------------------
	SubShader{
		//-------------------通道------------------
		Pass{
			//----------------材质------------------
			Material{
				//--------将漫反射和环境光设为相同
				DIFFUSE(0.9,0.5,0.4,1) //漫反射
				Ambient(0.9,0.5,0.4,1) //环境光
			}
			//开启光照
			Lighting On
		}
	}
}